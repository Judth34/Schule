<Window x:Class="ClobEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClobEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="605.79" Width="850.335">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="154*"></ColumnDefinition>
            <ColumnDefinition Width="76.571"></ColumnDefinition>
            <ColumnDefinition Width="307*"></ColumnDefinition>
            <ColumnDefinition Width="154*"></ColumnDefinition>
            <ColumnDefinition Width="154*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBox_files" Margin="10,39.143,0.286,9.571" Grid.Row="1" Grid.ColumnSpan="2" SelectionChanged="listBox_files_SelectionChanged" Grid.RowSpan="2"/>
        <ScrollViewer Margin="5" x:Name="scrollViewer_messages"  Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="5">
            <TextBlock x:Name="textBlock_messages" Padding="5"  TextWrapping="Wrap" Height="75" Width="629"/>
