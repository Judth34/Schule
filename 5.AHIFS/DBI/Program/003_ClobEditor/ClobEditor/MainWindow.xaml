        <TextBox x:Name="textBox_content" FontFamily="Consolas" Margin="57.714,45.429,54.571,0" TextWrapping="Wrap" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="1" AcceptsReturn="True" IsReadOnly="True"/>
