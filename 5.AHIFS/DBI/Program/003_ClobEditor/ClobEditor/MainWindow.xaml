        <Button x:Name="button_addFile" Padding="5" Margin="10,34,83.714,369.286" Content="Add File" Click="button_addFile_Click" Grid.RowSpan="2"/>
        <Button x:Name="button_edit" Padding="5" Margin="119.714,15,91.143,0.429" Content="Edit" Grid.Column="2" Click="button_edit_Click"/>
        <Button x:Name="button_save" Padding="5" Margin="119.714,10,91.143,360" Content="Save" Grid.Column="2" IsEnabled="False" Click="button_save_Click" Grid.Row="1"/>
        <TextBox x:Name="textBox_search" Padding="5" Margin="306.714,32,9.857,377.429" Grid.Row="0" Grid.Column="2" AutomationProperties.HelpText="Search" TextChanged="textBox_search_TextChanged" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button x:Name="button_search" Padding="5" Margin="45.143,32,42.571,378.429" Grid.Row="0" Grid.Column="4" Content="Search" Click="button_search_Click" Grid.RowSpan="2"/>
    </Grid>
</Window>
