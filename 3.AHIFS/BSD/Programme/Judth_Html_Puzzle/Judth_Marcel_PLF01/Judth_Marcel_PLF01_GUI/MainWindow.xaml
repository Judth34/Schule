        <TextBox x:Name="tblogs" IsReadOnly="True" HorizontalAlignment="Left" Height="86" Margin="21,208,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272"/>
        <TextBox x:Name="tbselectedFile" IsReadOnly="True" HorizontalAlignment="Left" Height="43" Margin="158,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="158,32,0,0" TextWrapping="Wrap" Text="Selected File" VerticalAlignment="Top"/>

    </Grid>
</Window>
