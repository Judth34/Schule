<Window x:Class="_008_tcp_async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_008_tcp_async"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="91"/>
        <TextBox x:Name="ServerPort" HorizontalAlignment="Left" Height="23" Margin="124,10,0,0" TextWrapping="Wrap" Text="11000" VerticalAlignment="Top" Width="78"/>
        <Button x:Name="button" Content="Connect" HorizontalAlignment="Left" Height="23" Margin="234,10,0,0" VerticalAlignment="Top" Width="106" Click="button_Click"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="25" Margin="10,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="192"/>
        <Button x:Name="button_Copy" Content="Send" HorizontalAlignment="Left" Height="23" Margin="234,62,0,0" VerticalAlignment="Top" Width="106"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="174" Margin="10,121,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="330"/>

    </Grid>
</Window>
