// BASE SETUP
// =============================================================================

// call the packages we need
var express    = require('express');        // call express
var app        = express();                 // define our app using express
var bodyParser = require('body-parser');
var sessionManager = require("./BL/sessionRaterBl");
sessionManager.createTestData();
sessionManager.rateSession(1, 1, "Judth");
sessionManager.rateSession(2, 2, "Franz");
sessionManager.rateSession(3, 1, "Blaschke");
sessionManager.rateSession(3, 3, "Hansi");

// configure app to use bodyParser()
// this will let us get the data from a POST
app.use(bodyParser.urlencoded({ extended: true }));
app.use(bodyParser.json());

var port = process.env.PORT || 8080;        // set our port

// ROUTES FOR OUR API
// =============================================================================
var defaultRouter = express.Router();              // get an instance of the express Router
var sessionRouter = express.Router();
var ratingsRouter = express.Router({mergeParams: true});

sessionRouter.use('/:sessionId/ratings', ratingsRouter);

// test route to make sure everything is working (accessed at GET http://localhost:8080/api)
defaultRouter.get('/', function(req, res) {
    //res.json(sessionManager.getSessions());
    res.json(
        { message: 'API Session Rater Backend',
        sessions: 'http://localhost:8080/api/sessions',
        ratings: 'http://localhost:8080/api/ratings'
    });   
});

sessionRouter.get('/', function(req, res) {
    res.json(sessionManager.getSessions());
});

sessionRouter.post('/', function(req, res){
    var newSessionObject = req.body;
    var result = sessionManager.createSession(newSessionObject.title, newSessionObject.speaker);
    console.log(newSessionObject);
    res.status(201).send(result);    
})

sessionRouter.get('/ratings', function(req, res){
    try {
        res.json(sessionManager.getAllRating());
    } catch (error) {
        res.status(404).send(error.toString());
    }
});

sessionRouter.get('/:id', function(req, res) {
    var session;
    try {
        var session = sessionManager.getSessionByID(req.params.id);
        res.json(session);        
    } catch (error) {
        res.status(404).send(error.toString());
    }
});
sessionRouter.get('/:id/ratings', function(req, res){
    try {
        var session = sessionManager.getSessionByID(req.params.id);
        res.json(session.getRatings());
    } catch (error) {
        res.status(404).send(error.toString());
    }
});

