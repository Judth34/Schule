<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
        <script src"../scripts/clientLogic.js"></script>
        <title>default</title>
    </head>
    <body>
        <div>
                <h1>This is a static page from our session rater</h1>
        </div>
        <div ng-app="myApp" ng-controller="customersCtrl"> 
            
            <table>
              <tr ng-repeat="session in sessions">
                <td>{{ session.Title }}</td>
                <td>{{ session.Speaker }}</td>
                <button ng-click="createSession()">Create new</button>
                <input type="text" ng-model="newTitle"></input>
                <input type="text" ng-model="newSpeaker"></input>
              </tr>
            </table>
            
            </div>
            
            <script>
            var app = angular.module('myApp', []);
            app.controller('customersCtrl', function($scope, $http) {

                $scope.sessions = [
                    {
                        'Title' : 'Session1',
                        'Speaker' : 'Speaker1'
                    },
                    {
                        'Title' : 'Session2',
                        'Speaker' : 'Speaker2'
                    },
                    {
                        'Title' : 'Session3',
                        'Speaker' : 'Speaker3'
                    }
                ]

                $scope.createSession = function(){
                    
                    $scope.sessions.push({
                        "Title" : $scope.newTitle,
                        "Speaker" : $scope.newSpeaker
                    });
                }

               
            });
            </script>
    </body>
    </html>